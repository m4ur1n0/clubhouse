<% content_for :title, "Sign Up" %>

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card shadow">
        <div class="card-body p-5">
          <h2 class="text-center mb-4">Create Account</h2>
          
          <%= form_with model: @user, url: signup_path, method: :post, local: true, class: "mb-4" do |form| %>
            <div class="mb-3">
              <%= form.label :name, class: "form-label" %>
              <%= form.text_field :name, class: "form-control", placeholder: "Enter your full name", required: true, autofocus: true %>
            </div>

            <div class="mb-3">
              <%= form.label :email, class: "form-label" %>
              <%= form.email_field :email, class: "form-control", placeholder: "Enter your email", required: true %>
            </div>

            <div class="mb-3">
              <%= form.label :password, class: "form-label" %>
              <%= form.password_field :password, class: "form-control", placeholder: "At least 6 characters", required: true %>
              <div class="form-text">Password must be at least 6 characters long.</div>
            </div>

            <div class="mb-3">
              <%= form.label :password_confirmation, "Confirm Password", class: "form-label" %>
              <%= form.password_field :password_confirmation, class: "form-control", placeholder: "Re-enter your password", required: true %>
            </div>

            <div class="d-grid">
              <%= form.submit "Create Account", class: "btn btn-northwestern-purple btn-lg" %>
            </div>
          <% end %>

          <!-- Divider -->
          <div class="position-relative my-4">
            <hr>
            <span class="position-absolute top-50 start-50 translate-middle bg-white px-3 text-muted">OR</span>
          </div>

          <!-- Google Sign In Button -->
          <div class="d-grid">
            <%= link_to google_login_path, class: "btn btn-outline-dark btn-lg d-flex align-items-center justify-content-center", data: { turbo: false } do %>
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-google me-2" viewBox="0 0 16 16">
                <path d="M15.545 6.558a9.4 9.4 0 0 1 .139 1.626c0 2.434-.87 4.492-2.384 5.885h.002C11.978 15.292 10.158 16 8 16A8 8 0 1 1 8 0a7.7 7.7 0 0 1 5.352 2.082l-2.284 2.284A4.35 4.35 0 0 0 8 3.166c-2.087 0-3.86 1.408-4.492 3.304a4.8 4.8 0 0 0 0 3.063h.003c.635 1.893 2.405 3.301 4.492 3.301 1.078 0 2.004-.276 2.722-.764h-.003a3.7 3.7 0 0 0 1.599-2.431H8v-3.08z"/>
              </svg>
              Continue with Google
            <% end %>
          </div>

          <!-- Sign In Link -->
          <div class="text-center mt-4">
            <p class="text-muted">Already have an account?
              <%= link_to "Sign in", signin_path, class: "text-decoration-none fw-bold" %>
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

