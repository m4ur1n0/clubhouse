<% content_for :title, "Edit Message" %>

<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h1 class="mb-4 text-northwestern-purple">Edit Message</h1>
      
      <%= form_with(model: [@club, @chat_message], class: "card shadow-sm") do |form| %>
        <div class="card-body">
          <% if @chat_message.errors.any? %>
            <div class="alert alert-danger">
              <h4 class="alert-heading"><%= pluralize(@chat_message.errors.count, "error") %> prohibited this message from being saved:</h4>
              <ul class="mb-0">
                <% @chat_message.errors.each do |error| %>
                  <li><%= error.full_message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <div class="mb-3">
            <%= form.label :content, "Message", class: "form-label" %>
            <%= form.text_area :content, class: "form-control", rows: 5, placeholder: "Edit your message..." %>
          </div>

          <div class="d-flex gap-2">
            <%= form.submit "Update Message", class: "btn btn-northwestern-purple" %>
            <%= link_to "Cancel", club_path(@club, anchor: "club-chat"), class: "btn btn-outline-secondary" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

