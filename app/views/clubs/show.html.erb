<section class="container my-4">
  <div class="position-relative mb-2">
    <div class="d-flex flex-row flex-wrap width-full gap-2" style="justify-content: space-between; align-items: center;">
        
        
        <h1 class="display-4 mb-3 border-bottom pb-4 fw-bold width-100 text-northwestern-purple">
        <%= @club.name %>
        </h1>



        <% if current_user && !current_user&.member_of?(@club) %>
            <div class="position-relative top-0 end-0 d-flex flex-row gap-2 mb-4" style="">
                <%= button_to club_membership_path(@club), method: :post, class: "btn btn-northwestern-purple me-2" do %>
                <i class="bi bi-person-plus-fill"></i> Join Club
                <% end %>
            </div>

        <% end %>

        <% if current_user&.member_of?(@club) %>
            <%= button_to club_membership_path(@club), method: :delete, class: "btn btn-outline-secondary" do %>
                <i class="bi bi-person-dash-fill"></i> Leave Club
            <% end %>
        <% end %>

    </div>

    <% if current_user&.owns?(@club) %>
        <div class="position-relative top-0 end-0 d-flex flex-row gap-2 mb-4" style="">
            <%= link_to edit_club_path(@club), class: "btn btn-outline-warning me-2" do %>
            <i class="bi bi-pencil-square"></i> Edit Club
            <% end %>
            <%= button_to @club, method: :delete, 
                data: { confirm: "Are you sure you want to delete this club and all of its events?" }, 
                class: "btn btn-outline-danger d-inline-block" do %>
            <i class="bi bi-trash"></i> Delete Club
            <% end %>
        </div>
    <% end %>

    <p class="lead text-muted"><%= @club.description %></p>
  </div>

  <section class="card shadow-sm mb-4">
    <div class="card-header bg-white">
      <h2 class="h3 mb-0 d-flex align-items-center text-northwestern-purple">
        <i class="bi bi-calendar-event me-2"></i>
        Upcoming Events
      </h2>
    </div>
    <div class="card-body">
      <% if @events.any? %>
        <div class="list-group list-group-flush" style="max-height:33dvh; overflow-y:auto;">
          <% @events.each do |event| %>
            <%= link_to event_path(event), class: "list-group-item list-group-item-action py-2 border-start-0 border-end-0 text-decoration-none text-reset" do %>
              <h5 class="mb-1 fw-bold"><%= event.name %></h5>
              <p class="mb-1 text-secondary">
                <i class="bi bi-clock me-1"></i>
                <%= event.date.strftime("%B %d, %Y at %I:%M %p") if event.date %>
              </p>
              <% if event.location.present? %>
                <p class="mb-0 text-secondary">
                  <i class="bi bi-geo-alt me-1"></i>
                  <%= event.location %>
                </p>
              <% end %>
            <% end %>
          <% end %>
        </div>
      <% else %>
        <p class="text-muted mb-0">
          <i class="bi bi-calendar-x me-2"></i>
          No upcoming events scheduled.
        </p>
      <% end %>
    </div>
  </section>

  <section class="card shadow-sm mb-4" id="club-chat">
    <div class="card-header bg-white">
      <h2 class="h3 mb-0 d-flex align-items-center text-northwestern-purple">
        <i class="bi bi-chat-dots me-2"></i>
        Club Chat
      </h2>
    </div>
    <div class="card-body">
      <% if @can_chat %>
        <div class="mb-4">
          <% if @chat_messages.any? %>
            <div class="list-group list-group-flush chat-thread" style="max-height: 40dvh; overflow-y: auto;">
              <% @chat_messages.each do |message| %>
                <div class="list-group-item border-start-0 border-end-0">
                  <div class="d-flex justify-content-between align-items-start">
                    <div class="flex-grow-1">
                      <div class="d-flex justify-content-between align-items-center">
                        <strong><%= message.user.name %></strong>
                        <small class="text-muted">
                          <%= message.created_at.strftime("%b %d, %Y %l:%M %p") %>
                          <% if message.edited_at %>
                            <% same_day = message.created_at.to_date == message.edited_at.to_date %>
                            <em>(edited <%= message.edited_at.strftime(same_day ? "%l:%M %p" : "%b %d, %Y %l:%M %p") %>)</em>
                          <% end %>
                        </small>
                      </div>
                      <div class="mt-2"><%= simple_format(message.content) %></div>
                    </div>
                    <% if current_user && message.user == current_user %>
                      <div class="d-flex gap-2 ms-3">
                        <%= link_to edit_club_chat_message_path(@club, message), class: "btn btn-sm btn-outline-secondary" do %>
                          <i class="bi bi-pencil"></i>
                        <% end %>
                        <%= button_to club_chat_message_path(@club, message), 
                            method: :delete,
                            data: { confirm: "Are you sure you want to delete this message?" },
                            class: "btn btn-sm btn-outline-danger" do %>
                          <i class="bi bi-trash"></i>
                        <% end %>
                      </div>
                    <% end %>
                  </div>
                </div>
              <% end %>
            </div>
          <% else %>
            <p class="text-muted mb-0">No messages yet. Start the conversation!</p>
          <% end %>
        </div>

        <%= form_with model: [@club, @new_chat_message], local: true do |form| %>
          <% if @new_chat_message.errors.any? %>
            <div class="alert alert-danger">
              <ul class="mb-0">
                <% @new_chat_message.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <div class="mb-3">
            <%= form.text_area :content, class: "form-control", rows: 3, placeholder: "Share an update with the club..." %>
          </div>
          <%= form.submit "Send", class: "btn btn-northwestern-purple" %>
        <% end %>
      <% elsif user_signed_in? %>
        <p class="text-muted mb-0">Join this club to read and participate in the chat.</p>
      <% else %>
        <p class="text-muted mb-3">Sign in and join this club to access the chat.</p>
        <%= link_to "Sign in with Google", "/auth/google_oauth2", class: "btn btn-northwestern-purple" %>
      <% end %>
    </div>
  </section>

  <div class="d-flex gap-2">
    <% if current_user&.member_of?(@club) %>
    
        <%= link_to new_event_path(club_id: @club.id), class: "btn btn-northwestern-purple" do %>
        <i class="bi bi-plus-circle me-1"></i> Add New Event
        <% end %>
    <% end %>
    <%= link_to clubs_path, class: "btn btn-outline-secondary" do %>
      <i class="bi bi-arrow-left me-1"></i> Back to All Clubs
    <% end %>
  </div>
</div>
