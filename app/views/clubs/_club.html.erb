<div id="<%= dom_id club %>" class="card h-100 shadow-sm">
  <div class="card-header bg-primary text-white">
    <h5 class="card-title mb-0">
      <i class="bi bi-bookmark-fill me-2"></i><%= club.name %>
    </h5>
  </div>
  <div class="card-body d-flex flex-column">
    <p class="card-text flex-grow-1">
      <%= club.description.present? ? club.description : 
          content_tag(:em, "No description provided", class: "text-muted") %>
    </p>
    <div class="mt-auto">
      <%= link_to club, class: "btn btn-outline-primary btn-sm" do %>
        <i class="bi bi-eye me-1"></i>View Details
      <% end %>
    </div>
    <div>
        <%= link_to edit_club_path(club), class: "btn btn-outline-primary btn-sm" do %>
        <i class="bi bi-pencil-fill me-1"></i>Edit Club
      <% end %>
    </div>
  </div>
</div>
